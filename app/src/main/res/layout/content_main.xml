<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/welcome"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Welcome "
                android:textSize="25dip"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25dip"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:id="@+id/activity_play_now"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.example.lenovo_g410.adu_jago_kuis.PlayNow"
                android:layout_below="@+id/welcome"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/Matematika"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matematika"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />
                <ImageButton
                    android:id="@+id/matematika"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="16dp"
                    android:elevation="4dp"
                    android:layout_alignParentLeft="true"
                    android:scaleType="centerInside"
                    android:layout_below="@+id/Matematika"
                    android:src="@drawable/matematika" />
                <TextView
                    android:id="@+id/Sains"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sains"
                    android:textSize="18dp"
                    android:layout_below="@+id/matematika"
                    android:textStyle="bold"
                    />
                <ImageButton
                    android:id="@+id/sains"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="16dp"
                    android:elevation="4dp"
                    android:layout_alignParentLeft="true"
                    android:scaleType="centerInside"
                    android:layout_below="@+id/Sains"
                    android:src="@drawable/sains" />
                <TextView
                    android:id="@+id/IPS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IPS"
                    android:layout_alignParentRight="true"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/Olahraga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Olahraga"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/ips"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />
                <ImageButton
                    android:id="@+id/olahraga"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="16dp"
                    android:elevation="4dp"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerInside"
                    android:layout_below="@+id/Olahraga"
                    android:src="@drawable/olahraga" />

                <ImageButton
                    android:id="@+id/ips"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:elevation="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ips"
                    android:layout_alignTop="@+id/matematika"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>


        </RelativeLayout>


</LinearLayout>